<Context docBase="slack2slack" path="/slack2slack" reloadable="true">
    <Realm className="org.apache.catalina.realm.JDBCRealm"
       driverName="com.mysql.cj.jdbc.Driver"
       connectionURL="jdbc:mysql://localhost:3306/slack2slack?user=tomcat&amp;password=tomcat"
       userTable="user" userNameCol="name" userCredCol="password"
       userRoleTable="user_role" roleNameCol="role_name" >
        <CredentialHandler
            className="org.apache.catalina.realm.MessageDigestCredentialHandler"
            algorithm="sha-256"
            encoding="UTF-8"
        />
    </Realm>
</Context>