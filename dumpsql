create schema slack2slack collate utf8mb4_0900_ai_ci;

create table user
(
    id int auto_increment
        primary key,
    name varchar(30) not null,
    password varchar(50) not null,
    constraint user_name_uindex
        unique (name)
);

create table user_role
(
    id int auto_increment
        primary key,
    role_name varchar(30) null,
    user_id int null,
    constraint user_role_user_id_fk
        foreign key (user_id) references user (id)
            on update cascade on delete cascade
);

create table workspace
(
    id int auto_increment
        primary key,
    name varchar(50) null,
    iconUrl varchar(100) null,
    primaryOwnerProfile json null
);

create table channel
(
    id int auto_increment
        primary key,
    name varchar(80) null,
    topic varchar(80) null,
    purpose varchar(80) null,
    workspace_id int null,
    constraint channel_workspace_id_fk
        foreign key (workspace_id) references workspace (id)
            on update cascade on delete cascade
);

